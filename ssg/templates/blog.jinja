{% extends "base.jinja" %}
{% block title %}Blog{% endblock %}
{% set selected_tab = "blog" %}
{% block content %}
    <style>
    input {
        margin-bottom: 20px;
        padding: 5px 10px;
        outline: none;
        border: 1px solid black;
    }
    </style>
    <main>
        <article id="content">
            <h1>Posts</h1>
            {% if posts %}
                <ul>
                    {% for post in posts %}
                        <li><a href="{{ post.url }}">{{ post.text }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="placeholder-text">There are no posts yet.</p>
            {% endif %}
        </article>
        <aside>
        </aside>
    </main>
{% endblock %}
