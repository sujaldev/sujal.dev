{% include "font-faces.css.jinja" %}

:root {
    --edges: #ccc;
    --light-edges: #eee;
    --light-text: #888;
    --regular-text: #444;
    --bold-text: #333;
    --anchor: #0468af;
    --anchor-hover: #0585e1;
    --anchor-active: #ca0;
}

* {
    margin: 0;
    box-sizing: border-box;
    color: var(--regular-text);
}

body {
    max-width: 1050px;
    margin: 0 auto;
    font-family: "Libertinus Sans", "Helvetica", sans-serif;
    font-size: 18px;
    line-height: 1.4;
}

h1, h2, h3 {
    line-height: 1.2;
    color: var(--bold-text);
}

a, a:visited {
    color: var(--anchor);
}

a:hover {
    color: var(--anchor-hover);
}

a:active {
    color: var(--anchor-active);
}

code, pre, tt, kbd, samp {
    font-family: "Libertinus Mono", monospace;
}

#skip {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px;
    border: 2px solid black;
    outline: none;
    background: white;
    z-index: 10;
}

#skip:focus {
    top: 0;
}

#root {
    min-height: 100vh;

    border: 1px solid var(--edges);
    border-top: 0;
    border-bottom: 0;

    display: flex;
    flex-direction: column;
}

header {
    position: relative; /* this is required for the stick man figure positioning */

    border-bottom: 1px solid var(--edges);
    background-size: 100% 100%, 27px 100%, 100% 27px;
    background-image: linear-gradient(to top, white 15%, transparent 60%),
    linear-gradient(to right, rgba(0, 0, 0, 0.1) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 1px, transparent 1px);

    display: flex;
    flex-direction: column;
    box-shadow: inset 0 -4px 5px -4px rgba(0, 0, 0, 0.08);
}

header::after {
    content: '';
    position: absolute;
    right: 25px;
    bottom: 45px;
    width: 75px;
    height: 125px;
    /*noinspection CssUnknownTarget*/
    background-image: url("{{ static_url("stickman.svg") }}");
    background-size: cover;
    opacity: 0.7;
}

header a, header a:visited {
    text-decoration: none;
    color: var(--bold-text);
}

header a:hover {
    color: black;
}

#title {
    padding: 25px 15px;
}

#title b {
    font-size: 2em;
    line-height: 0.95;
}

#title p {
    margin-top: 0.1em;

}

#links-container {
    margin-top: 0.075em;
    margin-right: 1px;
}

#links-container a {
    margin-right: 6px;
}

#links-container svg {
    min-width: 20px;
}

nav {
    display: flex;
    padding-left: 15px;
}

nav > span {
    position: relative;
    padding: 10px 5% 4px;
}

@supports (padding: min(1px, 2px)) {
    nav > span {
        padding: 10px min(5%, 40px) 4px;
    }
}

nav > span > a {
    font-weight: normal;
}

#selected-tab > a {
    font-weight: bold;
}

#selected-tab::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    border: 1px solid var(--edges);
    border-bottom: none;
    border-radius: 5px 5px 0 0;
    transform: perspective(5px) rotateX(1deg);
    transform-origin: bottom;
    box-shadow: 0 -1px 10px 1px rgba(0, 0, 0, 0.04);
    pointer-events: none;
}

#selected-tab::after {
    content: '';
    position: absolute;
    top: 90%;
    right: 0;
    bottom: -15%;
    left: 0;
    transform: perspective(5px) rotateX(1deg);
    transform-origin: bottom;
    background: white;
}

#selected-tab > a {
    font-weight: bold;
}

main {
    display: flex;
    flex: 1;
}

main > * {
    padding: 0 20px 0 20px;
}

main > article {
    min-width: 750px;
    max-width: 750px;
}

@media all and (max-width: 1050px) {
    main {
        flex-wrap: wrap;
    }

    main > article {
        min-width: initial;
        max-width: 100%;
    }
}

ul {
    padding-left: 1em;
}

footer {
    margin-top: auto;
    border-top: 1px solid var(--edges);
    padding: 10px;
    text-align: center;
}

/* ------------------------------------------------------------------------------------------------------------------ */

#content h1 {
    font-size: 1.8em;
}

#content p {
    margin-bottom: 1em;
}

#content code {
    background: #e6e6e6;
    padding: 2px 5px;
    border-radius: 4px;
    font-size: 0.85em;
}

/* ------------------------------------------------------------------------------------------------------------------ */

.placeholder-text {
    color: gray;
    font-style: italic;
}
