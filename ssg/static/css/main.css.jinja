:root {
    --content-width: 1050px;
    --sidebar-width: calc((100vw - var(--content-width)) / 2);
    --background: #f4f4f4;
    --edges: #ccc;
    --light-text: #555;
    --regular-text: #333;
    --bold-text: #111;
    --anchor: #0468af;
    --anchor-hover: #0585e1;
    --anchor-active: #ca0;
    --inline-code-bg: lightgray;
    --table-header-bg: #eee;
}

::-webkit-scrollbar {
    width: 0.3em;
}

::-webkit-scrollbar-thumb {
    background-color: gray;
    border-radius: 0.15em;
}


* {
    margin: 0;
    box-sizing: border-box;
    color: var(--regular-text);
}

body {
    font-family: "Libertinus Sans", "Helvetica", sans-serif;
    font-size: 18px;
    line-height: 1.4;
    background: var(--background);
    display: flex;
}

h1, h2, h3 {
    line-height: 1.2;
    color: var(--bold-text);
}

a, a:visited {
    color: var(--anchor);
    text-decoration: none;
}

a:hover {
    color: var(--anchor-hover);
}

a:active {
    color: var(--anchor-active);
}

code, pre, tt, kbd, samp {
    font-family: "Source Code Pro", monospace;
    font-size: 0.8em;
}

code {
    background: var(--inline-code-bg);
    padding: 2px 4px;
    border-radius: 4px;
}

#skip {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px;
    border: 2px solid black;
    outline: none;
    background: var(--background);
    z-index: 10;
}

#skip:focus {
    top: 0;
}

#left-sidebar, #right-sidebar {
    position: relative;
    min-width: var(--sidebar-width);
    max-width: var(--sidebar-width);
    min-height: 100vh;
    order: 0;
}

#right-sidebar {
    order: 2;
}

#root {
    min-height: 100vh;

    border: 1px solid var(--edges);
    border-top: 0;
    border-bottom: 0;

    display: flex;
    flex-direction: column;

    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    order: 1;
}

header {
    position: relative; /* this is required for the stick man figure positioning */

    border-bottom: 1px solid var(--edges);
    background: -1px -1px/110% 100% no-repeat url("{{ static_url("grid.svg") }}");

    display: flex;
    flex-direction: column;
    box-shadow: inset 0 -4px 5px -4px rgba(0, 0, 0, 0.08);
}

header::after {
    content: '';
    position: absolute;
    right: 25px;
    bottom: 45px;
    width: 75px;
    height: 125px;
    /*noinspection CssUnknownTarget*/
    background-image: url("{{ static_url("stickman.svg") }}");
    background-size: cover;
    opacity: 0.7;
}

header a, header a:visited {
    color: var(--bold-text);
}

header a:hover {
    color: black;
}

#title {
    padding: 25px 15px;
}

#title b {
    font-size: 2em;
    line-height: 0.95;
    color: var(--bold-text);
}

#title p {
    margin-top: 0.1em;

}

#links-container {
    margin-top: 0.075em;
    margin-right: 1px;
}

#links-container a {
    margin-right: 6px;
}

#links-container svg {
    min-width: 20px;
}

header nav {
    display: flex;
    padding-left: 15px;
}

header nav > span {
    position: relative;
    padding: 10px 5% 4px;
}

@supports (padding: min(1px, 2px)) {
    header nav > span {
        padding: 10px min(5%, 40px) 4px;
    }
}

header nav > span > a {
    font-weight: normal;
}

#selected-tab > a {
    font-weight: bold;
}

#selected-tab::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    border: 1px solid var(--edges);
    border-bottom: none;
    border-radius: 5px 5px 0 0;
    transform: perspective(5px) rotateX(1deg);
    transform-origin: bottom;
    box-shadow: 0 -1px 10px 1px rgba(0, 0, 0, 0.04);
    pointer-events: none;
}

#selected-tab::after {
    content: '';
    position: absolute;
    top: 90%;
    right: 0;
    bottom: -15%;
    left: 0;
    transform: perspective(5px) rotateX(1deg);
    transform-origin: bottom;
    background: var(--background);
}

#selected-tab > a {
    font-weight: bold;
}

main {
    position: relative; /* This is required for asides to be positioned as absolute. */
    display: flex;
    margin-bottom: 2em;
}

main > * {
    padding: 0 20px 0 20px;
    width: 100%;
}

main > article {
    min-width: 750px;
    max-width: 750px;
}

#recent-posts {
    padding-top: 1.5em;
}

#recent-posts > div {
    margin-top: 0.8em;
}

ul {
    padding-left: 1em;
}

footer {
    margin-top: auto;
    border-top: 1px solid var(--edges);
    padding: 10px;
    text-align: center;
}

/* ------------------------------------------------------------------------------------------------------------------ */

#posts > .post-preview:last-child {
    border-bottom: none;
}

.post-preview {
    padding-bottom: 20px;
    border-bottom: 1px solid var(--edges);
}

.post-preview > h4 > a {
    color: var(--regular-text);

}

.post-date {
    font-style: italic;
    color: var(--light-text);
}

/* ------------------------------------------------------------------------------------------------------------------ */

/* This is required for the issue described here: */
/* https://developer.mozilla.org/en-US/docs/Web/HTML/Element/Heading_Elements#specifying_a_uniform_font_size_for_h1 */
article h1 {
    font-size: 2em;
}

table {
    border: 1px solid var(--edges);
    border-collapse: collapse;
}

th {
    font-weight: bold;
    background: var(--table-header-bg);
}

td, th {
    padding: 8px 10px;
    border: 1px solid var(--edges);
}

#content h1,
#content h2,
#content h3,
#content h4,
#content h5,
#content h6 {
    margin-top: 0.75em;
}

#content .section-numbers {
    padding-right: 0.5em;
}

#content p {
    margin: 0.5em 0;
}

#content blockquote {
    padding: 0 15px;
    border-left: 3px solid var(--edges);
    margin: 0.5em 0;
}

#content aside {
    position: absolute;
    left: 770px;
    margin-top: -2em;
    width: 260px;
    opacity: 0.8;
    border-top: 1px solid var(--edges);
    font-size: 0.9em;
}

#content aside * {
    max-width: 100%; /* Don't remove, this makes large images fit inside the aside by default. */
}

/* ------------------------------------------------------------------------------------------------------------------ */

.regular-title {
    padding-bottom: 0.25em;
    border-bottom: 1px solid var(--edges);
}

.placeholder-text {
    color: gray;
    font-style: italic;
}

/* ------------------------------------------------------------------------------------------------------------------ */

@media all and (max-width: 1580px) {
    #left-sidebar {
        display: none;
    }

    #right-sidebar {
        display: none;
    }
}

@media all and (max-width: 1050px) {
    main {
        flex-wrap: wrap;
    }

    main > article {
        min-width: initial;
        max-width: 100%;
    }

    #content aside {
        position: relative;
        left: 0;
        margin: 1em 0;
        width: initial;
        padding: 5px 10px;
        border-bottom: 1px solid var(--edges);
    }
}
